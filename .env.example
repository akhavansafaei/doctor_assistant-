# Application
APP_NAME=AI Doctor Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_USER=doctor_ai
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=doctor_assistant
DATABASE_URL=postgresql+asyncpg://doctor_ai:your-secure-password@localhost:5432/doctor_assistant

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=medical_knowledge

# LLM APIs
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
COHERE_API_KEY=your-cohere-key

# LLM Configuration
PRIMARY_LLM=openai  # openai, anthropic
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
EMBEDDING_MODEL=text-embedding-3-large

# Medical LLM (Optional)
GOOGLE_MEDLM_API_KEY=
BIOGPT_ENDPOINT=

# External APIs
WEATHER_API_KEY=your-weather-api-key
AIR_QUALITY_API_KEY=your-air-quality-key

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Safety Settings
ENABLE_GUARDRAILS=True
EMERGENCY_ALERT_EMAIL=emergency@hospital.com
EMERGENCY_ALERT_PHONE=+1234567890

# RAG Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=10
RERANK_TOP_K=5
HYBRID_ALPHA=0.5  # Balance between dense and sparse retrieval

# Agent Settings
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=60

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,pdf
ALLOWED_DOCUMENT_TYPES=pdf,txt,docx

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
